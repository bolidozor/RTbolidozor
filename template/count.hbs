<script type="text/javascript">
    var layer = null;
    
    function showStation(name) {
        if (layer == null){
            $('#overlay_'+name).css('fill-opacity',0.8);
            layer = name;
        }
        else{
            if (layer == name){
                $('#overlay_'+layer).css('fill-opacity',0);
                layer = null;

            }else{
                $('#overlay_'+layer).css('fill-opacity',0);
                $('#overlay_'+name).css('fill-opacity',0.8);
                layer = name;

            }
        }
    }


</script>

